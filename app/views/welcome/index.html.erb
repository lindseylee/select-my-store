            <form action="/results" method="get">
            <%= form_for :user do |f| %>
               <%= f.text_field :name, :placeholder => "Who are you shopping for?" %>
              <%= f.text_field :age, :placeholder => "Age?" %>
              
                  <%= radio_button_tag(:sex, "female") %>
