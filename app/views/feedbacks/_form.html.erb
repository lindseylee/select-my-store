<%= form_for feedback do |f| %>
  <% if feedback.errors.any? %>
    <ul>
      <% feedback.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  
  <div>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>
  
  <div>
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div>
  
  <div>
    <%= f.label :message %><br/>
    <%= f.text_area :message %>
  </div>
  
  <div class="small-7 large-centered columns">
    <%= f.submit "SEND", :class => "contact-button" %>
  </div>
<% end %>